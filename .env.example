# Configuration file for RAG project
# Copy this file to .env and fill in your actual values

# ============================================================================
# Ollama Settings
# ============================================================================
# Remote server URLs for Ollama API
OLLAMA_REMOTE_A5000=http://100.64.0.7:11434/api/generate
OLLAMA_REMOTE_A6000=http://100.64.0.9:11434/api/generate
OLLAMA_LOCAL=http://localhost:11434/api/generate

# LLM Models
OLLAMA_MODEL_DEFAULT=gemma3:4b
OLLAMA_MODEL_LARGE=gemma3:27b
OLLAMA_MODEL_MISTRAL=mistral:7b

# ============================================================================
# HuggingFace Settings
# ============================================================================
# Your HuggingFace token (required for some models)
HF_TOKEN=your_huggingface_token_here

# Model names from HuggingFace Hub
HF_MODEL_SENTENCE_TRANSFORMER=sentence-transformers/all-MiniLM-L6-v2
HF_MODEL_BLIP=Salesforce/blip-image-captioning-large
HF_MODEL_CLIP=openai/clip-vit-base-patch32

# ============================================================================
# FAISS Settings
# ============================================================================
FAISS_INDEX_PATH=./models/faiss_index.index
EMBEDDING_DIMENSION=384

# ============================================================================
# Streamlit Settings
# ============================================================================
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# ============================================================================
# Data Paths - Base Directories
# ============================================================================
DATA_DIR=data
VECTORDB_DIR=VectorDBs
REPORT_DIR=report
CONFIG_DIR=config

# ============================================================================
# Data Paths - Dataset Directories
# ============================================================================
COCO_DATA_DIR=data/COCO
FLICKR_DATA_DIR=data/Flickr
VIZWIZ_DATA_DIR=data/VizWiz

# ============================================================================
# Data Paths - Image Directories
# ============================================================================
COCO_IMAGES_DIR=data/COCO/images
FLICKR_IMAGES_DIR=data/Flickr/images
VIZWIZ_IMAGES_DIR=data/VizWiz/images

# ============================================================================
# Standard Filenames
# ============================================================================
# These are appended to dataset directories
METADATA_FILENAME=metadata.json
SELECTED_IMAGES_FILENAME=selected_1000.json
PERFORMANCE_FILENAME=performance.json
CLUSTER_POSITIONS_FILENAME=cluster_positions.json
CORPUS_FILENAME=corpus.json

# ============================================================================
# Processing Settings
# ============================================================================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_TOKENS=2048
MAX_NEW_TOKENS=40

# ============================================================================
# Model Generation Parameters
# ============================================================================
# BLIP image captioning parameters
BLIP_NUM_BEAMS=5
BLIP_TOP_K=50
BLIP_TOP_P=0.95
BLIP_TEMPERATURE=0.8
BLIP_REPETITION_PENALTY=1.5
BLIP_MIN_LENGTH=30
BLIP_MAX_LENGTH=150

# ============================================================================
# FAISS IVF Settings
# ============================================================================
# Number of clusters to probe during search
FAISS_NPROBE=10
# Cluster calculation method: 'sqrt' for sqrt(N), 'fixed' for fixed number
IVF_CLUSTER_CALCULATION=sqrt
# Alpha parameter for cluster size weighting (0 < alpha < 1)
IVF_ALPHA=0.5

# ============================================================================
# Retrieval Settings
# ============================================================================
# Default number of results to retrieve
DEFAULT_K=100
# Default top-k results to return
DEFAULT_TOP_K=10
# Default similarity threshold (0.0 to 1.0)
DEFAULT_THRESHOLD=0.0
# Maximum retry attempts for API calls
MAX_RETRY_ATTEMPTS=3

# ============================================================================
# Rocchio Pseudo-Relevance Feedback Parameters
# ============================================================================
# Weight for original query (default: 1.0)
ROCCHIO_ALPHA=1.0
# Weight for relevant documents (default: 0.75)
ROCCHIO_BETA=0.75
# Weight for non-relevant documents (default: 0.0)
ROCCHIO_GAMMA=0.0

# ============================================================================
# Two Embeddings Fusion Weights
# ============================================================================
# Weights for combining different embedding systems
WEIGHT_CLASSIC=0.5
WEIGHT_BLIP=0.5
WEIGHT_AVERAGE=0.5
WEIGHT_BM25=0.5
